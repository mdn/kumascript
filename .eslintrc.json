{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:jest/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "no-buffer-constructor": "error",
        "no-unused-vars": ["error", {
            "args": "none",
            "varsIgnorePattern": "^_",
            "argsIgnorePattern": "^_"
        }],
        "jest/valid-describe": "off"
    }
}
