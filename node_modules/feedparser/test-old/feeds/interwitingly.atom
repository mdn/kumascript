  <path d="M45,100c-4-2-7-4-7-5c0-4,7-35,9-38c2-5,2-18-1-17l-28-31c25-11,44-10,55,1c9,8,15,23,12,30c-3,4-1,8,5,15c3,4,3,4,0,6c-2,2-4,1-5,8v4c0,1-4,1-1,1c2,0-1,2-1,2l-1,7c0,6-3,9-8,7c-5-2-11,1-14,7c-3,8-4,8-15,3M39,41l-34-18l4-4l31,22zM38,45l-35-9v6zM39,49l-31,10l-2-6zM40,52l-24,20l-2-4zM42,55l-17,37l-6-3z" fill="#01447B"></path>
